rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rooms collection - allow all operations
    match /rooms/{roomId} {
      allow read, write: if true;
    }

    // Users subcollection - allow all operations
    match /rooms/{roomId}/users/{userId} {
      allow read, write: if true;
    }

    // Options subcollection - allow all operations
    match /rooms/{roomId}/options/{optionId} {
      allow read, write: if true;
    }
  }
}
